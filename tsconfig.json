{
  "compilerOptions": {
    "target": "ES2022",                                  
    "lib": [
      "ES2017",
      "ESNext.Array",
      "ESNext.Promise",
      "ESNext.Symbol",
      "ESNext.AsyncIterable",
    ],                                                   
     "experimentalDecorators": true,                     
     "emitDecoratorMetadata": true,                      
    "module": "commonjs",                                
    "baseUrl": "./src",                                  
    "paths": {
      "@/*": ["*"],
      "@server/*": ["../*"],
      "@assets/*": ["assets/*"],
      "@validation/*": ["validation/*"],
      "@templates/*": ["templates/*"],
      "@configuration/*": ["configuration/*"],
      "@entity/*": ["entity/*"],
      "@plugin/*": ["plugin/*"],
      "@types/*": ["types/*"],
      "@error/*": ["error/*"],
      "@middleware/*": ["middleware/*"],
      "@repository/*": ["repository/*"],
      "@service/*": ["service/*"],
      "@utils/*": ["utils/*"],
     },                                                 
    "typeRoots": [
      "node_modules/@types" 
    ],                                                  
    "resolveJsonModule": true,                          

    "declaration": true,                              
    "sourceMap": true,                                
    "outDir": "./dist",                               
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,  
    "strictPropertyInitialization": false,               
    "noImplicitThis": false,     
    "noImplicitAny": false,                        

    "skipLibCheck": true,                                
  }
}
